- hosts: all
  tasks:
          - yum_repository: 
             name: docker-repo 
             description: docker 
             baseurl: https://download.docker.com/linux/centos/7/x86_64/stable/  
             gpgcheck: 0

          - shell:  
             yum install --nobest docker-ce 

          - service: 
             name: docker 
             state: started 

          - package:
             name: python3 
             state: present

          - pip: 
             name: docker-py 
             state: present

          - docker_image: 
             name: httpd
             source: pull

          - docker_container:  
             name: "webserver" 
             image: httpd 
             state: started

          - package:
             name: httpd  
             state: present

          - copy: 
             src: /index.html  
             dest: /var/www/html

          - service: 
             name: httpd 
             state: started

          - service:
             name: firewalld
             state: stopped
